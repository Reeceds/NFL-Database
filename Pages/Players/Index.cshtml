@page

@model IndexModel
@{
}
<h1>Players</h1>

<form class="d-flex">
    <div class="form-group pr-2">
        <label class="col-form-label" asp-for="SelectedTeam" class="control-label">Team:</label>
        <select class="form-control" asp-for="SelectedTeam" asp-items="Model.Teams" onchange="this.form.submit();">
            <option value="">All</option>
        </select>
    </div>
    <div class="form-group pr-2">
        <label class="col-form-label" asp-for="SelectedPosition" class="control-label">Position:</label>
        <select class="form-control" asp-for="SelectedPosition" asp-items="Model.Positions" onchange="this.form.submit();">
            <option value="">All</option>
        </select>
    </div>
    <div class="form-group pr-2">
        <label class="col-form-label" asp-for="SelectedCollege" class="control-label">College:</label>
        <select class="form-control" asp-for="SelectedCollege" asp-items="Model.Colleges" onchange="this.form.submit();">
            <option value="">All</option>
        </select>
    </div>
    <div class="form-group pr-2">
        <label class="col-form-label" asp-for="SearchString" class="control-label">Name:</label>
        <input class="form-control" type="text" asp-for="SearchString" />
        <input class="form-control" type="submit" value="Search" class="btn btn-primary btn-sm mr-auto" />
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="SortField" class="control-label">Sort by:</label>
        <select class="form-control" asp-for="SortField" onchange="this.form.submit();">
            <option value="Number">Number</option>
            <option value="Name">Name</option>
            <option value="Position">Position</option>
        </select>
    </div>
</form>

<section class="grid">
    <div class="d-flex bg-primary text-white">
        <div class="p-1" style="flex:0 0 10%">Team</div>
        <div class="p-1" style="flex:0 0 10%">Number</div>
        <div class="p-1" style="flex:0 0 25%">Name</div>
        <div class="p-1" style="flex:0 0 10%">Position</div>
        <div class="p-1" style="flex:0 0 20%">Experience</div>
        <div class="p-1" style="flex:0 0 25%">College</div>
    </div>

    @foreach (Player Player in Model.Players)
    {
        <a class="@Model.AddPlayerClass(Player)" asp-page="Player" asp-route-id="@Player.PlayerId">
            <div class="p-1" style="flex:0 0 10%">@Player.TeamId</div>
            <div class="p-1" style="flex:0 0 10%">@Player.Number</div>
            <div class="p-1" style="flex:0 0 25%">@Player.Name</div>
            <div class="p-1" style="flex:0 0 10%">@Player.Position</div>
            <div class="p-1" style="flex:0 0 20%">@Player.Experience</div>
            <div class="p-1" style="flex:0 0 25%">@Player.College</div>
        </a>
    }
</section>